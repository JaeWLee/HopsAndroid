<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
        <RelativeLayout
            android:id="@+id/r_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentLeft="true"
            android:background="@color/colorPrimary">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="75dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/btn_save"
                android:gravity="center"
                android:text="Card 관리" />
            <TextView
                android:id="@+id/btn_save"
                android:layout_width="45dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:background="@drawable/hops_round_button"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:text="완료" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/card_background_set"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_below="@+id/r_layout"
            android:src="@drawable/aa"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/card_image_set"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="135dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/round_view"
            android:src="@drawable/bb" />
        <RelativeLayout
            android:id="@+id/r_layout3"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/card_background_set"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/edit_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:text="이름" />
            <LinearLayout
                android:id="@+id/l_layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edit_name"
                android:layout_marginTop="20dp"
                android:layout_alignParentLeft="true"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/layout_des"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:clickable="true"
                    android:background="@drawable/white_grey_button">
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:text="Description"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="10dp"
                        android:gravity="center" />
                    <TextView
                        android:id="@+id/edit_des"
                        android:layout_width="270dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:gravity="right|center"
                        android:hint="Description"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_com"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:clickable="true"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/white_grey_button">
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:text="소속"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="10dp"
                        android:gravity="center" />
                    <TextView
                        android:id="@+id/edit_com"
                        android:layout_width="270dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:gravity="right|center"
                        android:hint="소속"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_pos"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:clickable="true"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/white_grey_button">
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:text="위치"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="10dp"
                        android:gravity="center" />
                    <TextView
                        android:id="@+id/edit_pos"
                        android:layout_width="270dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:gravity="right|center"
                        android:hint="위치"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/l_layout2"
                android:layout_below="@+id/l_layout1"
                android:layout_marginTop="15dp"
                android:layout_alignParentLeft="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/layout_pho"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:clickable="true"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/white_grey_button">
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:text="전화번호"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="10dp"
                        android:gravity="center" />
                    <TextView
                        android:id="@+id/edit_pho"
                        android:layout_width="270dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:gravity="right|center"
                        android:hint="전화번호"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/layout_email"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:clickable="true"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/white_grey_button">
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:text="이메일"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="10dp"
                        android:gravity="center" />
                    <TextView
                        android:id="@+id/edit_email"
                        android:layout_width="270dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:gravity="right|center"
                        android:hint="이메일"/>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
</RelativeLayout>
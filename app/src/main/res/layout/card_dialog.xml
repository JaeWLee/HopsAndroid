<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/touch_outside"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/main_card2"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="55dp"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="7dp"
        app:cardElevation="5dp"
        app:cardMaxElevation="15dp"
        app:contentPaddingLeft="0dp"
        app:contentPaddingRight="0dp">

        <RelativeLayout
            android:id="@+id/car2_touch_outside2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:clickable="false"
            android:orientation="vertical">

            <TextView
                android:id="@+id/card2_tv_description"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="Description"
                android:textSize="20dp"
                android:textColor="#000000"/>


        </RelativeLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/main_card"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/main_card2"
        android:layout_marginTop="31dp"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="7dp"
        app:cardElevation="5dp"
        app:cardMaxElevation="15dp"
        app:contentPaddingLeft="0dp"
        app:contentPaddingRight="0dp">

        <RelativeLayout
            android:id="@+id/card_touch_outside2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:clickable="false"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/card_relativeLayout"
                android:layout_width="193dp"
                android:layout_height="100dp"
                android:layout_alignParentEnd="true"
                android:layout_alignRight="@+id/item_imageView"
                android:layout_marginRight="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/card_tv_name"
                    android:layout_width="200dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="20dp"
                    android:gravity="left"
                    android:text="name"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/card_tv_company"
                    android:layout_width="200dp"
                    android:layout_height="20dp"
                    android:layout_below="@+id/card_tv_name"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:gravity="left"
                    android:text="Company"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/card_tv_position"
                    android:layout_width="200dp"
                    android:layout_height="20dp"
                    android:layout_below="@+id/card_tv_company"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:gravity="left"
                    android:text="Position"

                    android:textColor="#000000" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="193dp"
                android:layout_height="45dp"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/card_relativeLayout"
                android:orientation="horizontal"
                android:id="@+id/relativeLayout2">

                <ImageButton
                    android:id="@+id/card_imgBtn1"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/hops_button"
                    android:src="@drawable/image_call" />

                <ImageButton
                    android:id="@+id/card_imgBtn2"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignTop="@+id/card_imgBtn1"
                    android:layout_marginStart="15dp"
                    android:layout_toEndOf="@+id/card_imgBtn1"
                    android:background="@drawable/hops_button"
                    android:src="@drawable/image_email" />

                <ImageButton
                    android:id="@+id/card_imgBtn3"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignTop="@+id/card_imgBtn2"
                    android:layout_marginStart="15dp"
                    android:layout_toEndOf="@+id/card_imgBtn2"
                    android:background="@drawable/hops_button"
                    android:src="@drawable/image_add" />
            </RelativeLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/card_iv_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="17dp"
                android:background="@drawable/round_view"
                android:scaleType="centerCrop" />
        </RelativeLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>